{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ],
    "typeRoots": [
      "./node_modules/@types", // 默认的类型声明目录
      "./src/@types"           // 自定义类型声明目录
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
